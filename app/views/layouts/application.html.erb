<!DOCTYPE html>
<html>
  <head>
    <title>Tacostagram Final</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- My own CSS -->
    <link rel="stylesheet" href="/stylesheets/application.css">

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </head>

  <body>
    <nav class="navbar bg-primary mb-3" data-bs-theme="dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Tacostagram</a>
        <span class="navbar-text">
          <% @user = User.find_by({ "id" => session["user_id"] }) %>
          <% if @user == nil %>
            <a href="/users/new">Sign Up</a> | <a href="/login">Login</a>
          <% else %>
            Logged in as: <%= @user["username"] %> | <a href="/logout">Logout</a>
          <% end %>
        </span>
      </div>
    </nav>
    <div>
      <%= flash["notice"] %>
    </div>

    <%= yield %>
  </body>
</html>
